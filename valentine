<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Valentine's Day Question</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 50px;
            background-color: #f8f8f8;
        }
        button {
            padding: 10px 20px;
            margin: 10px;
            font-size: 16px;
            cursor: pointer;
        }
        .message {
            margin-top: 20px;
            font-size: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>Will you be my valentine?</h1>
    <button onclick="answer('Yes')">Yes</button>
    <button onclick="answer('Of course')">Of course</button>

    <div id="response" class="message"></div>

    <script>
        function answer(choice) {
            const responseElement = document.getElementById('response');
            if (choice === 'Yes') {
                responseElement.innerText = "Yay! You said yes!I love you handsome!!!";
            } else if (choice === 'Of course') {
                responseElement.innerText = "YAYAYAYYA WOOHOOO! I love you handsome!!";
            }
        }
    </script>
</body>
